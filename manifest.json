{
  "manifest_version": 2,
  "name": "Tab Nanny",
  "version": "1.0",
  "description": "Watch how much time you've spent on Twitter today.",
  "permissions": ["tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false // Set this to false to allow the background page to unload when the extension is reloaded
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html" // Add a browser action popup to allow the user to reload the extension
  }
}
