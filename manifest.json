{
  "manifest_version": 2,
  "name": "Tab Nanny",
  "description": "Watch how much time you've spent on Twitter today.",
  "version": "1.0",
  "icons": {
    "32": "public/favicon32.png",
    "64": "public/favicon32.png",
    "128": "public/favicon128.png"
  },
  "browser_action": {
    "default_popup": "public/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs"],
  "web_accessible_resources": ["content.js", "background.js", "content.js.map", "background.js.map"]
}
