{
  "manifest_version": 2,
  "name": "Tab Nanny",
  "description": "Watch how much time you've spent on a website today.",
  "version": "1.0",
  "icons": {
    "32": "public/favicon32.png",
    "64": "public/favicon32.png",
    "128": "public/favicon128.png"
  },
  "browser_action": {
    "default_popup": "public/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://blank.org/*",
        "*://*.twitter.com/*",
        "*://*.facebook.com/*",
        "*://*.reddit.com/*",
        "*://*.youtube.com/*",
        "*://*.instagram.com/*",
        "*://*.tumblr.com/*",
        "*://*.pinterest.com/*",
        "*://*.linkedin.com/*",
        "*://*.quora.com/*",
        "*://*.twitch.tv/*",
        "*://*.tiktok.com/*",
        "*://*.snapchat.com/*",
        "*://*.discord.com/*",
        "*://*.whatsapp.com/*",
        "*://*.slack.com/*",
        "*://*.messenger.com/*",
        "*://*.telegram.org/*",
        "*://*.discordapp.com/*",
        "*://*.skype.com/*",
        "*://*.zoom.us/*",
        "*://*.meet.google.com/*",
        "*://*.hangouts.google.com/*",
        "*://*.me"
      ],
      "js": ["content.js"]
    }
  ],
  "permissions": ["tabs"],
  "web_accessible_resources": ["content.js", "background.js"]
}
